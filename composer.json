{
  "name": "amp-framework/ampf",
  "description": "ampf MVC PHP framework",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "ampf\\": "src/ampf/",
      "ampfTest\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.3",
    "ext-pdo": "*",
    "doctrine/cache": "^2.2",
    "doctrine/orm": "^3.1",
    "symfony/cache": "^7.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^11.0",
    "slevomat/coding-standard": "^8.15"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
