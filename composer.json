{
  "name": "amp-framework/ampf",
  "description": "ampf MVC PHP framework",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "ampf\\": "src/ampf/",
      "ampfTest\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "doctrine/cache": "^2.2",
    "doctrine/orm": "^2.13",
    "symfony/cache": "^6.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.13",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^9.5",
    "slevomat/coding-standard": "^8.6"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
